<%= form_with model: User.new, url: users_path, local: true do |form| %>
  first_name: <%= form.text_field :first_name %><br>
  last_name: <%= form.text_field :last_name %><br>
  age: <%= form.text_field :age %><br>
  height: <%= form.text_field :height %><br>
  weight: <%= form.text_field :weight %><br>
  foobar: <%= form.file_field :foobar %><br>

  <%= form.submit 'form_submit!!' %>
<% end %>

<% @users.each do |user| %>
  <%= user.foobar_attacher&.data&.dig('metadata', 'filename') %><br>
  <%= user.foobar_attacher&.data&.dig('metadata', 'size') %><br>
  <%= user.foobar_attacher&.data&.dig('metadata', 'mime_type') %><br>
  <br>
  <%= link_to 'ファイルのダウンロード', user.foobar_attacher&.url %><br>
  <br>
<% end %>
